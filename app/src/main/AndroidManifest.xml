<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tv.ougrglass.belashiandroid">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="tv.ougrglass.tv.ourglass.belashiandroid.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="tv.ougrglass.tv.ourglass.belashiandroid.ControllerActivity">
            <intent-filter>
                <category android:name="android.intent.category.APP_BROWSER"/>
            </intent-filter>
        </activity>
        <activity android:name="tv.ougrglass.tv.ourglass.belashiandroid.MapActivity">
            <intent-filter>
                <category android:name="android.intent.category.APP_MAPS"/>
            </intent-filter>
        </activity>
        <receiver android:name="tv.ougrglass.tv.ourglass.belashiandroid.WIFIBroadcastReceiverListener">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>


</manifest>