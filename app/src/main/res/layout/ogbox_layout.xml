<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="194dp">

        <ImageView
            android:id="@+id/ogLogo"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:src="@drawable/tv_icon"
            android:contentDescription="@string/og_logo_description"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false">
        </ImageView>

        <TextView
            android:id="@+id/ogName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_dolor_bacon_ham_sandwhich"
            android:textSize="22dp"
            android:gravity="center_vertical|center"
            android:layout_below="@+id/ogLogo"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

</GridLayout>